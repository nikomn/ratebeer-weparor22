

<h1>Breweries</h1>

<h2>Active</h2>

<p>Number of active breweries: <%= @active_breweries.count %></p>

<div id="active-breweries">
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <th><%= link_to "Name of brewery", breweries_path(order: "name")%></th>
      <th><%= link_to "Foundation year", breweries_path(order: "year")%></th>
    </tr>
    </thead>
    <tbody>
    <% @active_breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<h2>Retired</h2>

<p>Number of retired breweries: <%= @retired_breweries.count %></p>

<div id="inactive-breweries">
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <th scope="col">Name of brewery</th>
      <th scope="col">Foundation year</th>
    </tr>
    </thead>
    <tbody>
    <% @retired_breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to("New brewery", new_brewery_path, class:'btn btn-primary') if current_user %>

<p><%= link_to "List of beers", beers_path %></p>