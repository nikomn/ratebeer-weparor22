<div id="<%= dom_id brewery %>">
  <h2><%= link_to "#{brewery.name}", brewery %></h2>
  <% if not brewery.active  %>
    <span class="badge bg-secondary">retired</span>
  <% end %>

  <p>
    <i>Established in: <%= brewery.year %></i>
  </p>
  <%# binding.pry %>
  <p>
    <i>Beers count: <%= brewery.beers.count %></i>
  </p>
<!--  <p><%#= brewery.beers.to_a %></p>-->
  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to "#{beer.name}", beer %>
    <% end %>
  </p>

  <% if !brewery.ratings.empty? %>
    <p>This brewery has <%= pluralize(brewery.ratings.count, 'rating')%> with an average of <%= brewery.average_rating %></p>
  <% end %>

</div>
