

<h1>Styles</h1>

<div id="styles">
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Num of beers</th>
    </tr>
    </thead>
    <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td><%= style.description %></td>
        <td><%= style.beers.count %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to('New style', new_style_path, class:'btn btn-primary') %>
